<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tols"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rectangle_13"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rectangle_14"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rectangle_13"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:rotation="180" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rectangle_14"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:rotation="180" />

    <TextView
        android:id="@+id/login"
        android:layout_width="410dp"
        android:layout_height="70dp"
        android:height="42.3sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:lineHeight="42sp"
        android:text="Login"
        android:fontFamily="@font/mavenprosemibold"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:layout_marginTop="90dp"/>

    <TextView
        android:id="@+id/welcometolaggin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to laggin?"
        android:fontFamily="@font/mavenproregular"
        android:layout_below="@+id/login"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="50dp"
        />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcometolaggin"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/mavenproregular"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_below="@+id/email"
        android:id="@+id/LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        >
        <EditText
            android:id="@+id/fillemail"
            android:layout_width="335dp"
            android:layout_height="40dp"
            android:background="@drawable/fillshape"
            android:hint="user@gmail.com"
            android:textSize="12dp"
            android:paddingLeft="20dp"
            android:fontFamily="@font/mavenpromedium"/>

        <TextView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcometolaggin"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/mavenproregular"
            android:text="Password"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/fillpass"
            android:layout_width="335dp"
            android:layout_height="40dp"
            android:background="@drawable/fillshape"
            android:hint="Enter your password"
            android:textSize="12dp"
            android:paddingLeft="20dp"
            android:inputType="textPassword"
            android:fontFamily="@font/mavenpromedium"/>
    </LinearLayout>

    <Button
        android:id="@+id/buttonlogin"
        android:layout_width="220dp"
        android:layout_height="47dp"
        android:layout_below="@+id/LL"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/fillshape"
        android:fontFamily="@font/mavenproregular"
        android:text="Login"
        android:textColorHint="@color/white"
        android:theme="@style/Theme.Laggin." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonlogin"
        android:id="@+id/LL2"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New one?"
            android:textColor="@color/black"
            android:fontFamily="@font/mavenproregular"
            android:textSize="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:paddingLeft="5dp"
            android:fontFamily="@font/mavenproblack"
            android:textStyle="bold"
            android:clickable="true"
            android:id="@+id/signup"/>

    </LinearLayout>

</RelativeLayout>